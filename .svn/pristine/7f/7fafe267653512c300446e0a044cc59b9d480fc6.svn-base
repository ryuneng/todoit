<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<title>마이페이지::회원정보수정</title>
</head>
<body>
<div class="container">
	<div class="row">
		<div class="col-12">
			<h1>회원정보수정</h1>
		</div>
	</div>	
		<div class="row pt-4 mb-3">
			<div class="col-3">
				<jsp:include page="sidebar.jsp"></jsp:include>				
			</div>
	
			<div class="col-9">
				<form class="border bg-light p-3"
				 method="post" 
				 action=".jsp">
					<div class="form-group">
						<label class="form-label">아이디</label>
						<input type="text" class="form-control" placeholder="이전아이디" name="id"/>
					</div>
					<div class="form-group">
						<label class="form-label">비밀번호</label>
						<input type="password" placeholder="이전비밀번호" class="form-control" name="password"/>
					</div>
					<div class="form-group">
						<label class="form-label">이름</label>
						<input type="text" placeholder="이전이름" class="form-control" name="name"/>
					</div>
					<div class="form-group">
						<label class="form-label">닉네임</label>
						<input type="text" placeholder="이전닉네임" class="form-control" name="name"/>
					</div>
					<div class="form-group">
						<label class="form-label">생년원일</label>
						<input type="text" placeholder="생년원일" class="form-control" name="email"/>
					</div>
					<div class="form-group">
						<label class="form-label">성별</label>
						<input type="text" placeholder="이전성별" class="form-control" name="tel"/>
					</div>
					<div class="form-group">
						<label class="form-label">이메일</label>
						<input type="text" placeholder="이전이메일" class="form-control" name="tel"/>
					</div>
					<div class="form-group">
						<label class="form-label">전화번호</label>
						<input type="text" placeholder="이전전화번호" class="form-control" name="tel"/>
					</div>
					<div class="form-group">
						<label class="form-label">주소</label>
						<input type="text" placeholder="이전주소" class="form-control" name="tel"/>
					</div>
					<div class="form-group">
						<label class="form-label">한줄소개</label>
						<input type="text" placeholder="이전소개" class="form-control" name="tel"/>
					</div>
					<div class="text-end">
						<a href="info.jsp" class="btn btn-secondary">취소</a>
						<button type="submit" class="btn btn-primary">가입</button>
					</div>
				</form>
			</div>
		</div>
</div>
</body>
</html>